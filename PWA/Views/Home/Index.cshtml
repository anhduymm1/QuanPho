                                                            </div>
                                                            <div class="row">
                                                                <label class="col-8" style="display:flex; align-items:center; justify-content:flex-start">50.000 đ</label>
                                                                <input type="number" value="1" class="col-2" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>*@
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Modal order*@
    <div class="modal fade" aria-labelledby="userformmodalLabel1" aria-hidden="true" tabindex="-1" id="modalorder">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Danh sách:&ensp;</h5>
                    <h5 class="modal-title" id="tenban1"></h5>
                    <h5 class="modal-title" id="idban" style="display:none"></h5>
                    <input type="hidden" id="userID" value="@Session["UserID"]" />
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <div class="py-1">
                        <form class="form" novalidate="">
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="col-12 col-lg-3 col-md-12">
                                            <div class="mb-3">
                                                <input class="form-control" type="text" id="searchInput" placeholder="Tìm kiếm sản phẩm...">
                                            </div>
                                        </div>
                                        <div class="col-1 col-md-2 col-lg-1" style="display:flex; align-items:end;">
                                            <div class="mb-3">
                                                <button class="btn btn-outline-info form-control" id="ssdsd" type="button" onclick="addOrder()" data-bs-dismiss="modal">Thêm</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row listproduct">

                                    </div>
                                </div>
