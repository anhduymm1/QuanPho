@{
    ViewBag.Title = "Home Page";
}

<div class="container " style="height:100%">

    <div class="row justify-content-center text-center mb-4">
        <div class="col-xl-6 col-lg-8 col-sm-10">
            <h2 class="font-weight-bold">The Perfect Blend of Features <br>for your Company</h2>
            <p class="text-muted mb-0">We bring the results while helping you achieve cost and time savings without taking on risk or management overhead.</p>
        </div>
    </div>
    <div class="row flex-lg-nowrap">
        <div class="col-12 col-lg-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="e-navlist e-navlist--active-bold">
                        <ul class="nav">
                            <li class="nav-item active"><a href="" class="nav-link"><span>Tất cả / </span> <small id="static-all"></small></a></li>
                            <li class="nav-item"><a href="" class="nav-link"><span>Bàn đã đặt / </span> <small id="static-active"></small></a></li>
                            <li class="nav-item"><a href="" class="nav-link"><span>Bàn chưa đặt / </span> <small id="static-disable"></small></a></li>
                        </ul>
                    </div>

                    <hr class="my-3" />
                    <div class="">
                        <label class="form-label">Trạng thái:</label>
                        <div class="px-2">
                            <div class="custom-control custom-radio form-check">
                                <input type="radio" class="form-check-input" name="table-status" id="users-status-disabled" value="0" />
                                <label class="form-label" for="users-status-disabled">Bàn chưa đặt</label>
                            </div>
                        </div>
                        <div class="px-2">
                            <div class="custom-control custom-radio form-check">
                                <input type="radio" class="form-check-input" name="table-status" id="users-status-active" value="1" />
                                <label class="form-label" for="users-status-active">Bàn đã đặt</label>
                            </div>
                        </div>
                        <div class="px-2">
                            <div class="custom-control custom-radio form-check">
                                <input type="radio" class="form-check-input" name="table-status" id="users-status-any" checked="" value="-1" />
                                <label class="form-label" for="users-status-any">Tất cả</label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="content row row-cols-lg-4 row-cols-md-3 row-cols-2 text-center justify-content-center px-xl-6 aos-init aos-animate" data-aos="fade-up">
            </div>
        </div>
    </div>
    @*Modal hóa đơn*@
